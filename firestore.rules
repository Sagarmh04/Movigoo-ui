rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Root events collection - allow read for frontend display
    match /events/{eventId} {
      // Allow anyone to read events (for frontend display)
      allow read: if true;
      
      // Allow writes (restrict in production)
      allow write: if true;
    }
    
    // Allow read for all other documents
    match /{document=**} {
      allow read: if true;
      allow write: if true; // For dev - restrict in production
    }
  }
}
